<form action="/signup" method="POST"></form>

<style>
  body {
    background-image: url("../images/wallpaper_signup.jpeg");
    background-repeat: no-repeat;
    background-size: cover;
    height: 100vh;
  }

  label.form-label {
    color: white;
  }

  p.text-muted,
  a.text-body {
    color: white !important;
    font-size: 14px;
  }

</style>
  
<div class="container-fluid mt-5">
  <div class="row">
    <div class="col">
      <div class="container-sm mb-1" style="max-width: 30%;">
        <form action="/signup" method="POST">
          <div class="mb-1">
            <label class="form-label"> Choose a username </label>
            <input type="text" name="username" placeholder="username" class="form-control" required />
          </div>

          <div class="mb-1">
            <label class="form-label"> Email </label>
            <input type="email" name="email" placeholder="@email" class="form-control" aria-describedby="emailHelp" required />
            <div id="emailHelp" class="form-text">We'll never share your email with anyone.</div>
          </div>

          <div class="mb-2">
            <label class="form-label"> Password </label>
            <input type="password" name="password" placeholder="password" class="form-control" required />
          </div>

          <button type="submit" class="btn btn-outline-secondary w-100 py-2">Register</button>
          <p class="text-center text-muted mt-1 mb-0">Already a member? <a href="/login" class="fw-bold text-body"><u>Login here</u></a></p>
          <%#!-- error message will be added here --%>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt-3">
  <div class="col">
    <div class="container-sm mb-2" style="max-width: 30%;">
      <div class="card text-white" style="background-color: rgba(85, 86, 86, 0.5); border-radius: 15px;">
        <div class="card-body p-5">

          <i class="fas fa-quote-left fa-2x mb-4"></i>

          <p class="lead" style="font-size: 1.1rem;">“Laughter is poison to fear.”</p>

          <hr>

          <div class="d-flex justify-content-between">
            <p class="mb-0" style="font-size: 0.9rem;">― George R.R. Martin, A Game of Thrones</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer.ejs') %>