
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" />
<div class="wrapper">
  <div class="section">
    <div class="top_navbar">
      <div class="hamburger">
        <a href="#">
          <i class="fas fa-bars"></i>
        </a>
      </div>
    </div>
    <div class="container">
      <% if (active === "home") { %>
      <%- include ('./partials/homepage.ejs') %>
      <% } %>
      <% if (active === "book") { %>
      <%- include('./partials/editor.ejs', {book: selectedBook}) %>
      <% } %>
    </div>
  </div>
  <div class="sidebar">
    <div class="profile">
      <form action="/upload" method="POST" enctype="multipart/form-data">
        <label>
          <input type="file" id="profileImage" name="profileImage" accept="image/png, image/jpg" style="display: none;" onchange="displayImage(event)"/>
          <img id="previewImage" src="<%- user.image %>" alt="Profile Picture" />
        </label>
        <button type="button" id="uploadButton" class="btn btn-info" onclick="profileImage.click()">Edit</button>
      </form>
      


      <h3><%= user.username %></h3>
      <p>Designer</p>
    </div>
    <ul>
      <li>
        <a href="/profile" class="<%= active === 'home' ? 'active': '' %>">
          <span class="icon"><i class="fas fa-home"></i></span>
          <span class="item">Home</span>
        </a>
        <% if (myBooks.length > 0 || readOnlyBooks.length > 0) { %>
        <div class="sidebarLibrary">
          <%- include('./partials/sidebar-library.ejs', {myBooks, readOnlyBooks}) %>
        </div>
        <% } %>
      </li>
      <li>
        <a href="/library" class="<%= active === 'home' || active === 'book' ? 'active': '' %>">
          <span class="icon"><i class="fas fa-desktop"></i></span>
          <span class="item">Library</span>
        </a>
      </li>
      <li>
        <a href="#">
          <span class="icon"><i class="fas fa-cog"></i></span>
          <span class="item">Settings</span>
        </a>
      </li>
      <li>
        <a href="/profile/user/logout">
          <i class="material-symbols-outlined ">logout</i>
          <span class="item">Logout</span>
        </a>
      </li>
      <li>
        <a href="/profile/user/delete">
          <i class="material-symbols-outlined ">delete</i>
          <span class="item">Delete Account</span>
        </a>
      </li>
    </ul>
  </div>
</div>

<script>
  const hamburger = document.querySelector(".hamburger");
  hamburger.addEventListener("click", function() {
    const classes = document.querySelector("body").classList;
    classes.toggle("active");
  });
</script>

<script>
  function displayImage(event) {
    const previewImage = document.getElementById('previewImage');
    const file = event.target.files[0];

    if (file) {
      const reader = new FileReader();
      reader.onload = function (e) {
        previewImage.src = e.target.result;
      };
      reader.readAsDataURL(file);
    }
  }
</script>