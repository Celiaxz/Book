<h1>Create a Book</h1>
<form method="POST" action="/create-book" enctype="multipart/form-data">
  <label for="author">Author:</label>
  <input type="text" id="author" name="author" placeholder="Author Name or ID" required>
  <br>
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" required>
  <br>
  <label for="genre">Genre:</label>
  <select id="genre" name="genre" required>
    <option value="Poetry">Poetry</option>
    <option value="Prose">Prose</option>
    <option value="Drama">Drama</option>
  </select>
  <br>
  <label for="description">Description:</label>
  <textarea id="description" name="description" required></textarea>
  <br>
  <label for="publishingDate">Publishing Date:</label>
  <input type="number" id="publishingDate" name="publishingDate" required>
  <br>
  <label>Upload a book cover:
    <input type="file" id="imgUrl" name="imgUrl" accept="image/png, image/jpg"/>
  </label>
  <br>
  <button type="submit">Create</button>
</form>