<%- include('./partials/navbar.ejs') %>

<div class="preview">
  <div class="card mb-3 justify-content-center mx-auto align-item-center" style="max-width: 65%; background-color: rgba(147, 150, 150, 0.5); ">
    <div class="row g-0">
      <div class="col-md-4">
        <% if (book.cover) { %>
        <img src="<%- book.cover %>" alt="Book Cover" class="img-fluid rounded-start" />
        <% } else { %>
        <img src="/images/cover_not_found.jpg" class="img-fluid rounded-start" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <% if (book.description) { %>
          <p class="card-text"><%= book.description %></p>
          <% } %>
          <% book.links.forEach((link, index) => { %>
          <p class="card-text"><small class="text-body-secondary">
              <a href="<%- link.url %>" name="bookData" value=<%= book.author_name %> target="_blank" style="color: black; font-weight: bold;"><%- link.title %></a>
            </small></p>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>